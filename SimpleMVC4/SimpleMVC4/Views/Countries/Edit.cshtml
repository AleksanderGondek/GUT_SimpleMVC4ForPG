@model SimpleMVC4.Models.Countries.CountryModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CountryModel</legend>

        @Html.HiddenFor(model => model.CountryId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TotalArea)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TotalArea)
            @Html.ValidationMessageFor(model => model.TotalArea)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OfficialLanguage)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OfficialLanguage)
            @Html.ValidationMessageFor(model => model.OfficialLanguage)
        </div>
        
        <div class="display-label">
            @Html.DisplayNameFor(model => model.CountryModels) <br />
        </div>
        <div class="display-field">
            @Html.ListBoxFor(model => model.SelectedCountries, Model.AllCountries,
            new { @class = "chosen", multiple = "multiple", style = "width: 350px;" })
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<script type="text/javascript">
   $(function () {
       $(".chosen").chosen();
       $(".chosen").trigger('chosen:updated');
   });
</script>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
